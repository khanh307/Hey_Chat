<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/edit_backgroud"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_chose_image" />

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">
        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/editNameTwo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="85dp"
                android:layout_toEndOf="@+id/layoutname2"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_small" />

            <ImageButton
                android:id="@+id/editNameOne"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/layoutname1"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_small2" />

            <RelativeLayout
                android:id="@+id/layoutname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/icheard"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:cardCornerRadius="999dp">

                    <ImageView
                        android:id="@+id/image_one"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/card1"
                    android:background="#ff6096"
                    app:cardBackgroundColor="#ff6096"
                    app:cardCornerRadius="999dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp">

                    <ImageView
                       android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="#ff6096"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_edit" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Khánh"
                    android:textColor="@color/purple_200"
                    android:textSize="25sp"
                    android:layout_below="@+id/card1"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>



            <ImageView
                android:id="@+id/icheard"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_heard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/layoutname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/icheard"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:cardCornerRadius="999dp">

                    <ImageView
                        android:id="@+id/image_two"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/card2"
                    android:background="#ff6096"
                    app:cardBackgroundColor="#ff6096"
                    app:cardCornerRadius="999dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="55dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="#ff6096"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_edit" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Ngân"
                    android:textColor="@color/purple_200"
                    android:textSize="25sp"
                    android:layout_below="@+id/card2"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:paddingTop="20dp"
            android:layout_below="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã bên nhau"
                android:textColor="@color/purple_200"
                android:textSize="25sp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/editTotalDays"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_small" />

            <TextView
                android:id="@+id/tvTotalDays"
                android:layout_below="@+id/tv1"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1384"
                android:textSize="50sp"
                android:textColor="@color/purple_200"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_below="@+id/tvTotalDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ngày"
                android:textColor="@color/purple_200"
                android:textSize="30sp"
                android:textAlignment="center"
                android:paddingTop="5dp"/>

            <ImageButton
                android:id="@+id/editProgressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="110dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_small3" />

            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="5dp"
                android:layout_below="@+id/tv3"
                android:paddingBottom="15dp">

                <TextView
                    android:paddingRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1300"
                    android:textColor="#23014E"/>

                <SeekBar
                    android:splitTrack="false"
                    android:id="@+id/sbPercent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:thumb="@drawable/ic_heard_pink"
                    android:background="@null"/>
                <TextView
                    android:paddingLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1400"
                    android:textColor="#23014E"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>